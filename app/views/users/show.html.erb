<div class="intro-header-find" style="margin-top: -50px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">     
                <div class="shadow">
                    <h1>Perfil</h1>
                </div>      
            </div>
        </div>
    </div>
</div>

<%= @user.name %>, <%= @user.email %>



  <div style="float: left">
    <%= form_tag @user, :id => @user.id, :method => 'get' do |f| %>
  <center>
  <br><br>
    <%if @user.profileQuiz_id == nil%>
        <table class="table">
            <legend>Questionário</legend>
            <tr>
                <td>
                    <font color="red"><%= flash_message %></font>
                </td>
            </tr>
            <tr>
                <td><%= label_tag :answer1, 'Você apoia o UBER?' %></td>
                <td><%= radio_button_tag :answer1,"sim_uber",:value => 1 %>Sim</td>
                <%#=label_tag :answer1, 'uber_sim', :value => 1 %>
                <td><%= radio_button_tag :answer1,"nao_uber", :value => 0 %>Não</td>
                <%#=label_tag :answer1, 'uber_nao', :value => 0 %>
            </tr>
        
            <tr>
                <td><%= label_tag :answer2, 'Você prefere cidade mais movimentada?'%></td>
                <td><%= radio_button_tag :answer2,"sim_movimentada", :value => 0 %>Sim</td>
            <%#= label_tag(:age_child, 1) %>
                <td><%= radio_button_tag :answer2,"nao_movimentada", :value => 1 %>Não</td>
            </tr>
            <tr>
                <td><%= label_tag :answer3, 'Você prefere cidade grande ou pequena?'%></td>
                <td><%= radio_button_tag :answer3,"sim_grande", :value => 0 %>Grande</td>
            <%#= label_tag(:age_child, 1) %>
                <td><%= radio_button_tag :answer3,"sim_pequena", :value => 1 %>Pequena</td>
            </tr>
            <tr>
                <td><%= label_tag :answer4, 'Você prefere cidade mais populosa ou menos populosa?'%></td>
                <td><%= radio_button_tag :answer4,"sim_populosa", :value => 0 %>Mais</td>
            <%#= label_tag(:age_child, 1) %>
                <td><%= radio_button_tag :answer4,"nao_populosa", :value => 1 %>Menos</td>
            </tr>
            <tr><td></td><td><%= submit_tag "Confirmar" %></td></tr>
            <tr><td><font color="red">*Você poderá responder apenas uma vez.</font></td></tr>
        </table>
    </center>
    <%end%>
    <%end%>
  </div>
  <center>
      <%= link_to "Atualizar Perfil", edit_user_path(current_user), class: "btn btn-primary" %>
  <%#= link_to "Atualizar Perfil", edit_user_path(current_user), class: "btn btn-primary" %>
      | <%= link_to "Deletar conta", @user, method: :delete,
                                    data: { confirm: "Você tem certeza?" } %>
  </center>
