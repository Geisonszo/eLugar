        	<div class="col-lg-12">     
                <div class="shadow">
					<h1>Perfil</h1>
				</div>		
			</div>
		</div>
	</div>
</div>

<%= @user.name %>, <%= @user.email %>
<%if params[:answer1]%>
    <%= @profile_quiz.answer1%>
    <%= @profile_quiz.answer2%>
<%end%>


<% if @current_user %>
     <%= link_to "Atualizar Perfil", edit_user_path(current_user), class: "btn btn-primary" %>

  <% end %>
<%#= link_to "Atualizar Perfil", edit_user_path(current_user), class: "btn btn-primary" %>
<% if @current_user %>
    | <%= link_to "Deletar conta", @user, method: :delete,
                                  data: { confirm: "Você tem certeza?" } %>
  <% end %>

  <div style="float: left">
    <%= form_tag @user, :id => @user.id, :method => 'get' do |f| %>
    <p>
    <%= label_tag :answer1, 'Você apoia o UBER?' %>
    <%= radio_button_tag :answer1, 1 %>Sim
    <%#= label_tag(:age_child, 1) %>
    <%= radio_button_tag :answer1, 0 %>Não
    <%#= label_tag(:age_adult, 2) %>

    <br>
    <%= label_tag :answer2, 'Você prefere cidade mais movimentada?'%>
    <%= radio_button_tag :answer2, 1 %>Sim
    <%#= label_tag(:age_child, 1) %>
    <%= radio_button_tag :answer2, 0 %>Nao

    <br>
    <%= radio_button_tag :answer3, 1 %>Sim
    <%#= label_tag(:age_child, 1) %>
    <%= radio_button_tag :answer3, 0 %>Nao

    <%= radio_button_tag :answer4, 1 %>Sim
    <%#= label_tag(:age_child, 1) %>
    <%= radio_button_tag :answer4, 0 %>Nao

    </p>
    <p>
    <%= submit_tag "Confirmar" %>
    </p>

<%end%>



  </div>