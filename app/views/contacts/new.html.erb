<body>
  <br><br><br>
    <div class = "col-lg-6 col-sm-6">
      <div class="container">
        <div class= "row">
          <div class="col-lg-6 col-sm-4">
            <h3>Envie-nos uma mensagem!</h3>

            <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
              <%= f.input :name, :required => true %>
              <%= f.input :email, :required => true %>
              <%= f.input :message, :as => :text, :required => true %>
              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Deixe esse campo em branco!' %>
              </div>
              <div>
                </br>
                <%= f.button :submit, 'Enviar Mensagem', :class=> "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- /.container -->

    </div>
    <div class = "col-lg-5 col-sm-6">
      <div class="row">
        <div class="col-lg-12">
          <img class="img-responsive" src="/assets/eLugarLogo.png" alt="" style="margin-top:30px;">
          <br><br>
        </div>
      </div>
    </div>
  </div>
</body>


