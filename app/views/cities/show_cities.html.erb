        	<!-- Header -->
            <a name="about"></a>
            <div class="intro-header-find">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="intro-message-find">
                                <h1>Escolha a cidade que deseja conhecer !</h1>
                                <hr class="intro-divider">
                                <ul class="list-inline intro-social-buttons black">
                                    <li>
                                        <%= form_tag(find_path, :method => :post) do %>
        									<%= text_field_tag :find, nil, placeholder: 'Digite o nome da cidade...', size: '50'%><br>
                                            <b class="black">Ordenar por:</b>
        									<%= select_tag :sort_cities, options_for_select(['Populacao','Densidade','Area','Frota','IDH','Gini','Saude']),{include_blank: true}%>
                                            &nbsp;&nbsp;<a href="#" id="show_filter_form" class = "btn btn-default btn-sm">+</a>
        									<%= submit_tag "Pesquisar", class: "btn btn-default btn-sm"%>
                                            <div id="filter_form">
                                            <br>
                                                <div class="panel panel-default">
                                                    <div class="panel-heading"><left>Filtragem</left></div>
                                                    <div class="panel-body">
                                                        População:<br>
                                                        De: <%= text_field_tag :from_population, nil, size:'8'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_population, nil, size:'8'%>
                                                        <hr>
                                                        Densidade demográfica:<br>
                                                        De: <%= text_field_tag :from_density, nil, size:'5'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_density, nil, size:'5'%>
                                                        <hr>
                                                        Área: <br>
                                                        De: <%= text_field_tag :from_area, nil, size:'5'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_area, nil, size:'5'%>
                                                        <hr>
                                                        Frota: <br>
                                                        De: <%= text_field_tag :from_fleet, nil, size:'8'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_fleet, nil, size:'8'%>
                                                        <hr>
                                                        IDH:<br>
                                                        De: <%= text_field_tag :from_idh, nil, size:'5'%> &nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_idh, nil, size:'5'%>
                                                        <hr>
                                                        Gini: <br>
                                                        De: <%= text_field_tag :from_gini, nil, size:'5'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_gini, nil, size:'5'%>
                                                        <hr>
                                                        Saude: <br>
                                                        De: <%= text_field_tag :from_health, nil, size:'5'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_health, nil, size:'5'%>
                                                        <hr>
                                                        Violência: <br>
                                                        De: <%= text_field_tag :from_violence, nil, size:'5'%>&nbsp;&nbsp;
                                                        Até: <%= text_field_tag :to_violence, nil, placeholder: 'até', size:'5'%>
                                                        Uber? <%=check_box('uber_rb', 'uber_sim')%>
                                                    </div>
                                                </div>
                                            </div>
                                        <% end %>   
                                    </li>
                                    <br><br><br>
                                    <li>
                                    	<table>
                                            <%cont = 0%>
                                            
                                            <%@cities.each do |f| %>
                                                <%if cont<3 %>
                                                    <td>
                                                        <%=link_to city_path(f), :class=>'opacityit' do%>
                                                            <img class=" img-responsive img-rounded"src= <%="/assets/#{f.image}.jpg"%> heigth="300" width="300">
                                                        <% end %>
                                                        <h4><%=f.name%></h4>
                                                    </td>
                                                    
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                <%else%>
                                                <tr>
                                                </tr>
                                                 <td>
                                                        <%=link_to city_path(f), :class=>'opacityit' do%>
                                                            <img class="img-responsive img-rounded"src= <%="/assets/#{f.image}.jpg"%> heigth="300" width="300">
                                                        <% end %>
                                                        <p><%=f.name%></p>
                                                    </td>
                                                    
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <%cont = 0%>
                                                <%end%>
                                                <%cont=cont+1%>
                                            <%end%> 
                                            <%if @find%>
                                                <%= will_paginate @citiesPaginated, :params => {:find => @find} %>
                                            <%else%>
                                                <%= will_paginate @citiesPaginated %>
                                                <%end%>

                                         </table>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
